
<div class='container px-5 px-sm-0 margin: auto;'>
  <div class='row'>
    <div class='col-md-4'>
        
<h2>プロフィール</h2>
<%= render 'info', user: @user %>
    </div>

<div class='col-md-8'>
 <div style="width: 100%">
  <div class='card' style="d-block mb-5">
     <div class="d-flex justify-content-center bg:#505D6B" style="background-color: #505d6b">
            <h2 class="text-white">投稿</h2>
     </div>
     <div style="display: flex">
        <p class="d-flex justify-content-center col-md-2">怪談</p>
        <div class="d-flex justify-content-center col-md-5"><%= @user.contents.count %></div>
        <div class="col-md-1">
          <%= link_to '一覧',contents_path, class: "btn btn-info btn-sm btn-sm mb-3 sign_in" %>
        </div>
     </div>
          <div style="display: flex">
        <p class="d-flex justify-content-center col-md-2">質問</p>
        <div class="d-flex justify-content-center col-md-5"><%= @user.questions.count %></div>
        <div class="col-md-1">
          <%= link_to '一覧',questions_path, class: "btn btn-info btn-sm btn-sm mb-3 sign_in" %>
        </div>
     </div>
  </div>
  <% unless @user.guest_user? %>
   <% if @user == current_user %>
   <div class='margin-bottom: 2px;'>
    <%= link_to '新規投稿', new_content_path(@user), class: "btn btn-sm btn-success d-block mb-2"%>
    <%= link_to '新規質問', new_question_path(@user), class: "btn btn-sm btn-success d-block mb-2" %>
    <%= link_to 'プロフィール編集', edit_user_path(@user), class: "btn btn-sm btn-success d-block mb-2" %>
   </div>
<% end %>
  <% end %>
 </div>
 </div>
  </div>
</div>
