<div class='container px-5 px-sm-0 margin: auto;'>
  <div class='row'>
    <div class='col-md-4'>
        
<h2>プロフィール</h2>
<%= render 'info', user: @user %>
    </div>

<div class='col-md-8'>
 <div style="width: 100%">
  <div class='card shadow' style="margin-bottom: 30px">
      <div class="d-flex justify-content-center bg:#505D6B" style="background-color: #505d6b">
            <h2 class="text-white">投稿</h2>
     </div>
      <div class="card-body" style= "background-color: #2f3436">
     
     
     <div class="row">
         <div class="col-md-3">怪談</div>
         <div class="col-md-7" style= "background-color: #4a4a4a"><%= @user.contents.count %></div>
         <div class="col-md-2"><%= link_to '一覧',content_index_path(@user), class: "btn btn-info btn-block" %></div>
     </div>
     
     <div class="row mt-3">
         <div class="col-md-3">質問</div>
         <div class="col-md-7" style= "background-color: #4a4a4a"><%= @user.questions.count %></div>
         <div class="col-md-2"><%= link_to '一覧',questions_index_path, class: "btn btn-info btn-block" %></div>
     </div>
  </div>
    </div>
    
  <% unless @user.guest_user? %>
   <% if @user == current_user %>
   <div class='margin-bottom: 2px;'>
    <%= link_to '新規投稿', new_content_path(@user), class: "btn btn-sm btn-success d-block shadow mb-2"%>
    <%= link_to '新規質問', new_question_path(@user), class: "btn btn-sm btn-success d-block shadow mb-2" %>
    <%= link_to 'プロフィール編集', edit_user_path(@user), class: "btn btn-sm btn-success d-block shadow mb-2" %>
   </div>
<% end %>
  <% end %>

 </div>
 </div>
  </div>
</div>
