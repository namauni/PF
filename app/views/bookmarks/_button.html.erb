<% if content.bookmarked_by?(current_user) %>
    <%= link_to content_bookmarks_path(content), method: :delete, remote: true do %>
        ♥<%= content.bookmarks.count %> お気に入り
    <% end %>
<% else %>
    <%= link_to content_bookmarks_path(content), method: :post, remote: true do %>
        ♡<%= content.bookmarks.count %> お気に入り
    <% end %>
<% end %>