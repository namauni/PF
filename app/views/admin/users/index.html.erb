<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <% if @users.count > 0 %>
   <table class="table text-white">
     <tbody>
      <% @users.each do |user| %>
        <tr>
           <td><%= user.id %></td>
           <td><%= user.name %></td>
           <td>フォロー数：<%= user.followings.count %></td>
           <td>フォロワー数：<%= user.followers.count %></td>
          <td><%= link_to "削除", admin_user_path(user.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>