<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
        
     <div class='card' style="d-block mb-5">
      <div style="display: flex">
          <%= link_to '一覧',contents_path, class: "btn btn-info btn-sm btn-sm mb-3 sign_in" %>
          <%= link_to 'コメント',content_comments_path, class: "btn btn-info btn-sm btn-sm mb-3 sign_in" %>
          <%= link_to '新着順',contents_arrivalorder_path, class: "btn btn-info btn-sm btn-sm mb-3 sign_in" %>
          <%= link_to '投稿',contents_path, class: "btn btn-info btn-sm btn-sm mb-3 sign_in" %>
      </div>
     </div>
     
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @contents.each do |content| %>
      <tr>
        </td>
        <td><%= link_to content.title,content %></td>
        <td><%= content.text %></td>
      
     <td> <% if content.favorited_by?(current_user) %>
      
       <%= link_to content_favorites_path(content), method: :delete, remote: true do %>
       ♥<%= content.favorites.count %> いいね
       <% end %>
       </td>
      <% else %>
      
       <%= link_to content_favorites_path(content), method: :post, remote: true do %>
       ♡<%= content.favorites.count %> いいね
       <% end %>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>