
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<div class="d-flex justify-content-center bg:#505D6B" style="background-color: #505d6b">
            <h2 class="text-white">内容編集</h2>
</div>
<%= form_with model: @content do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :text %>
  
  <h4>投稿者コメント</h4>
  <%= f.text_area :user_comment %>
  
  <%= f.submit '保存' %>
  
<% end %>
   </div>
  </div>
 </div>