<%= flash[:notice] %>

<div>
<h2>タイトル</h2>
<p><%= @contents.title %></p>

<h2>本文</h2>
<p><%= @contents.text %></p>

<% if @contents.user == current_user %>
<%= link_to "編集", edit_content_path(@content.id) %>
<%= link_to "削除", destroy_content_path(@content.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>
</div>

<div>
  <p>コメント件数：<%= @content.comments.count %></p>
  <% @content.comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@content, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>