 <div class="container">
  <div class="row">
    <div class='col-md-10'>
     <div>
      <div class="d-flex justify-content-center bg:#505D6B" style="background-color: #505d6b">
      <p class="text-white"><%= @content.title %></p>
      </div>

      <div class="d-flex justify-content-center bg:#505D6B" style="background-color: #202425">
      <p class="text-white"><%= @content.text %></p>
      </div>

<% if @content.user == current_user %>
<%= link_to "編集", edit_content_path(@content.id), class: "btn btn-sm btn-success" %>
<%= link_to "削除", content_path(@content.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
<% end %>
     </div>
    </div>
 </div>

<div class="row">
 <div class='col-md-10'>
<p>投稿者<%= @content.user.name %></p>
<p><%= @content.user_comment %></p>

    <td> <% if @content.favorited_by?(current_user) %>
      
       <%= link_to content_favorites_path(@content), method: :delete, remote: true do %>
       ♥<%= @content.favorites.count %> いいね
       <% end %>
       </td>
      <% else %>
      
       <%= link_to content_favorites_path(@content), method: :post, remote: true do %>
       ♡<%= @content.favorites.count %> いいね
       <% end %>
       <% end %>
    </div>
</div>

<div>
  <p>コメント件数：<%= @content.comments.count %></p>
  <% @content.comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@content, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
  </div>
 </div>