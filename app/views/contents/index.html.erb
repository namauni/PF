<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% contents.each do |content| %>
      <tr>
        <td><%= link_to (content.user) do %>
          <%= image_tag content.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to content.title,content %></td>
        <td><%= content.body %></td>
      
     <td> <% if content.favorited_by?(current_user) %>
      
       <%= link_to content_favorites_path(content), method: :delete, remote: true do %>
       ♥<%= content.favorites.count %> いいね
       <% end %>
       </td>
      <% else %>
      
       <%= link_to content_favorites_path(content), method: :post, remote: true do %>
       ♡<%= content.favorites.count %> いいね
       <% end %>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>